<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="container">
    <h1>All Hubs</h1>
    <div>
        <a href="/hubs/new">Add Hub</a>
    </div>
    <% for (let hub of hubs){%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <%if(hub.images.length) {%>
                    <img class="img-fluid" alt="" src="<%=hub.images[0].url%>">
                    <% }else {%>
                    <img class="img-fluid" alt=""
                        src="https://res.cloudinary.com/dvidneho8/image/upload/v1655893159/FlexHub/ojdmfxly1ad3pdj1fphd.jpg">
                    <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= hub.title %> </h5>
                    <p class="card-text"><%= hub.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= hub.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/hubs/<%=hub._id%>">View <%=hub.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>

<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const hubs = { features: <%- JSON.stringify(hubs) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>

