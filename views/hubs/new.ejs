<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Hub</h1>
    <div class="col-6 offset-3">
        <form action="/hubs" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="hub[title]" required>
                <div class="valid-feedback">
                    looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="hub[location]" required>
                <div class="valid-feedback">
                    looks good!
                </div>
            </div>
            <!-- <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="hub[image]"required>
                <div class="valid-feedback">
                    looks good!
                </div>
            </div> -->
            <div class="mb-3">
                <label class="form-label" for="price">Hub Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">&#8358;</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="hub[price]" required>
                        <div class="valid-feedback">
                            looks good!
                        </div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="hub[description]" required></textarea>
                <div class="valid-feedback">
                    looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label custom-file-label">Choose image(s)</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
            </div>
            <div class="row">
                <div class="col-3 mb-3">
                    <button class="btn btn-success">Add Hub</button>
                </div>
                <div class="col-3 mb-3">
                    <a class="btn btn-danger" href="/hubs">All Hubs</a>
                </div>
            </div>
            
        </form>
       
    </div>
</div>