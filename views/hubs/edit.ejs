<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Hub</h1>
    <div class="col-6 offset-3">
        <form action="/hubs/<%=hub._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="hub[title]"
                    value="<%=hub.title %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="hub[location]"
                    value="<%=hub.location %>" required>
            </div>
            <!-- <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="hub[image]"
                    value="<%=hub.image %>" required>
            </div> -->
            <div class="mb-3">
                <label class="form-label" for="price">Hub Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">&#8358;</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="hub[price]" value="<%=hub.price %>" required>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description"
                    name="hub[description]" required><%= hub.description%></textarea>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label custom-file-label">Add more image(s)</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
            </div>
            <div class="row">
                <div class="mb-3">
                    <% hub.images.forEach(function(img, i){ %>
                        <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">

                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]"
                                value="<%=img.filename%>">
                        </div>
                        <label for="image-<%=i%>">Delete?</label>
                        <% }) %>

                </div>

                <div class=" col-3 mb-3">
                    <button class="btn btn-info">Update Hub</button>
                </div>
                <div class="col-3 mb-3">
                    <a class="btn btn-danger" href="/hubs/<%= hub._id%>">Back To Hub</a>
                </div>
            </div>
            
        </form>
      

    </div>
</div>